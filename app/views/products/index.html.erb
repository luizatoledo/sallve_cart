<div class="main-container d-flex">
  <div class="product-cards-container flex-grow-1">
    <% @products.each do |product| %>
      <div class="product-card">
        <div class="product-card-img-div">
          <%= cl_image_tag product.photo.key, class: "product-card-img" %>
        </div>
        <div class="product-card-info">
          <span class="product-card-name"><%= product.name %></span>
          <span class="product-card-price"><%= product.sku.price %></span>
        </div>
      </div>
    <% end %>
  </div>
  <div class="cart-container">
    <% if @cart.products == [] %>
    <span>Ops! Sua sacola ainda está vazia.</span>
    <span>Vem cá descobrir nossas fórmulas e esoclher a sua</span>
    <% else %>
      <% render 'carts/show' %>
    <% end %>
  </div>
</div>
